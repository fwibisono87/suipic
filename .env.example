# ====================================
# Suipic Environment Configuration
# ====================================
# This file serves as a template for setting up your environment.
# Copy this file to .env and adjust the values as needed.
# SECURITY: Never commit .env files to version control.
# SECURITY: Change all default passwords and secrets before deploying to production!

# ====================================
# General Application Settings
# ====================================
# Environment: 'development' or 'production'
ENV=development
# Port for the backend service
PORT=3000

# ====================================
# Database Configuration (PostgreSQL)
# ====================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=suipic
DB_PASSWORD=suipic_password
DB_NAME=suipic
# SSL Mode: 'disable' for local dev, 'require' for production
DB_SSLMODE=disable

# ====================================
# Object Storage (MinIO / S3)
# ====================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=suipic
MINIO_USE_SSL=false

# ====================================
# Search Engine (Elasticsearch)
# ====================================
ES_ADDRESSES=http://localhost:9200
ES_USERNAME=
ES_PASSWORD=

# ====================================
# Authentication & Security
# ====================================
# JWT Secret: Generate a strong random string (e.g., `openssl rand -base64 32`)
JWT_SECRET=change-this-in-production-use-strong-secret
JWT_EXPIRY=24h

# CORS Origins: Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost,http://localhost:3001,http://localhost:5173

# ====================================
# Initial Admin User
# ====================================
# These credentials are used to seed the initial admin account.
# The system will update the admin password on startup if it differs from this value.
ADMIN_EMAIL=admin@suipic.local
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
