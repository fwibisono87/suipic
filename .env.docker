# ====================================
# Suipic Docker Environment Configuration
# ====================================
# Copy this file to .env and customize for your environment
# SECURITY: Change all passwords before deploying to production!

# ====================================
# PostgreSQL Database Configuration
# ====================================
POSTGRES_USER=suipic
POSTGRES_PASSWORD=suipic_password
POSTGRES_DB=suipic

# ====================================
# Backend Application Configuration
# ====================================
PORT=3000
ENV=production

# Database Connection
DB_HOST=postgres
DB_PORT=5432
DB_USER=suipic
DB_PASSWORD=suipic_password
DB_NAME=suipic
DB_SSLMODE=disable

# ====================================
# Elasticsearch Configuration
# ====================================
ES_ADDRESSES=http://elasticsearch:9200
ES_USERNAME=
ES_PASSWORD=

# ====================================
# MinIO Object Storage Configuration
# ====================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=suipic

# ====================================
# JWT Authentication Configuration
# ====================================
# IMPORTANT: Generate a strong random secret for production!
# Example: openssl rand -base64 32
JWT_SECRET=change-this-in-production-use-strong-secret
JWT_EXPIRY=24h

# ====================================
# CORS Configuration
# ====================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost,http://localhost:3001,https://localhost

# ====================================
# Initial Admin User Configuration
# ====================================
# These credentials are used to create the initial admin user
# Change these immediately after first login!
ADMIN_EMAIL=admin@suipic.local
ADMIN_PASSWORD=admin123
ADMIN_USERNAME=admin

# ====================================
# Frontend Configuration
# ====================================
# URL where the backend API is accessible from the browser
PUBLIC_API_URL=http://localhost/api
# Origin for SvelteKit
ORIGIN=http://localhost

# ====================================
# Production Recommendations
# ====================================
# 1. Change all default passwords
# 2. Generate strong JWT_SECRET (32+ random characters)
# 3. Set ADMIN_PASSWORD to a strong password
# 4. Update CORS_ORIGINS to match your domain
# 5. Configure SSL certificates (see docker/nginx/ssl/README.md)
# 6. Set ENV=production for backend
# 7. Never commit .env file to version control
